{
  "id": "burn_stages_helpers",
  "version": "1.1.0",
  "title": "Aides pour les stades de brûlure",
  "description": "Repères cliniques détaillés pour l'évaluation des brûlures selon le degré.",
  "metadata": {
    "created": "2025-01-05",
    "updated": "2025-01-10",
    "author": "Système d'évaluation clinique",
    "language": "fr-CA"
  },
  "helpers": {
    "burn_stage_1": {
      "id": "burn_stage_1",
      "title": "Brûlure 1er degré",
      "type": "modal",
      "content": {
        "tissus_atteints": [
          "Épiderme"
        ],
        "apparence": [
          "Érythémateuse et luisante",
          "Œdème léger",
          "Pas de phlyctène"
        ],
        "remplissage_capillaire": [
          "≤ 2 secondes",
          "Blanchiment à la pression"
        ],
        "sensation": [
          "Douleur variant d'un prurit à une douleur vive"
        ]
      }
    },
    "burn_stage_2a": {
      "id": "burn_stage_2a",
      "title": "Brûlure 2e degré superficiel",
      "type": "modal",
      "content": {
        "tissus_atteints": [
          "Derme réticulaire",
          "Racine du follicule pileux habituellement intacte"
        ],
        "apparence": [
          "Érythémateuse/rose pâle",
          "Œdème léger à modéré",
          "Phlyctènes séreuses aux parois fines",
          "Phlyctènes intactes pouvant grossir"
        ],
        "remplissage_capillaire": [
          "≤ 2 secondes",
          "Blanchiment à la pression"
        ],
        "sensation": [
          "Douleur vive",
          "Sensibilité résiduelle potentielle au soleil, vent, froid, friction",
          "Prurit possible"
        ]
      }
    },
    "burn_stage_2b": {
      "id": "burn_stage_2b",
      "title": "Brûlure 2e degré profond",
      "type": "modal",
      "content": {
        "tissus_atteints": [
          "Derme papillaire",
          "Annexes cutanées souvent atteintes"
        ],
        "apparence": [
          "Sèche, tachetée de manière inégale, rouge foncé, apparence de plaque décolorée",
          "Œdème bien présent",
          "Phlyctènes séreuses aux parois épaisses, souvent éclatées",
          "Phlyctènes intactes qui peuvent grossir"
        ],
        "remplissage_capillaire": [
          "> 2 secondes ou absent",
          "Pas de blanchiment à la pression"
        ],
        "sensation": [
          "Sensibilité uniquement à la pression",
          "Peut devenir douloureux après quelques jours"
        ]
      }
    },
    "burn_stage_3": {
      "id": "burn_stage_3",
      "title": "Brûlure 3e degré",
      "type": "modal",
      "content": {
        "tissus_atteints": [
          "Tissus sous-cutanés"
        ],
        "apparence": [
          "Sèche, aspect de cuir souple, blanc ou noir",
          "Parfois vaisseaux sanguins carbonisés",
          "Peu de phlyctènes ; si présentes, phlyctènes aux parois minces, ne grossissant pas",
          "Œdème"
        ],
        "remplissage_capillaire": [
          "Absent"
        ],
        "sensation": [
          "Absente au niveau de la brûlure",
          "Peut être présente en périphérie"
        ]
      }
    },
    "burn_stage_4": {
      "id": "burn_stage_4",
      "title": "Brûlure 4e degré",
      "type": "modal",
      "content": {
        "tissus_atteints": [
          "Structures profondes : os, tendons, muscles, etc."
        ],
        "apparence": [
          "Sèche, carbonisation",
          "Pas de phlyctène"
        ],
        "remplissage_capillaire": [
          "Absent"
        ],
        "sensation": [
          "Absente"
        ]
      }
    }
  }
}


