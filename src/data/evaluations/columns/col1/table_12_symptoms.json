      "required": true,
      "condition": {
        "anyOf": ["C1T12E02"]
      },
      "options": [
        {
          "id": "C1T12E02C1",
          "label": "Contrôlée",
          "description": "Douleur bien contrôlée"
        },
        {
          "id": "C1T12E02C2",
          "label": "Non-contrôlée",
          "description": "Douleur mal contrôlée"
        }
      ],
      "ui": {
