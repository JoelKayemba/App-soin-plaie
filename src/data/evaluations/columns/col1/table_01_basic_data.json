{
  "id": "C1T01",
  "title": "Données de base",
  "description": "Informations de base pour l'évaluation du risque de lésions de pression",
  "category": "patient_data",
  "column": 1,
  "table": 1,
  "elements": [
    {
      "id": "C1T01E01",
      "type": "date",
      "label": "Date de naissance",
      "required": true,
      "validation": {
        "min_date": "1900-01-01",
        "max_date": "today",
        "format": "YYYY-MM-DD"
      },
      "routes": [
        {
          "to": "constat_redirect",
          "phase": "immediate",
          "priority": 1,
          "condition": {
            "comparison": {
              "var": "age.days",
              "operator": "lt",
              "value": 30
            }
          },
          "note": "Redirection immédiate si personne de moins d'un mois"
        }
      ],
      "ui": {
        "component": "DateInput",
        "placeholder": "JJ/MM/AAAA",
        "help": "Date de naissance"
      }
    }
  ],
  "validation_rules": {
    "required_fields": [
      "C1T01E01"
    ],
    "date_validation": {
      "birth_date": {
        "not_future": true,
        "reasonable_range": "1900-today"
      }
    }
  }
}