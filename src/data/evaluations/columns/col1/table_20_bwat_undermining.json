{
  "id": "C1T20",
  "version": "1.0.0",
  "title": "BWAT – Sous-minage",
  "description": "Évaluation du sous-minage de la plaie selon l'échelle BWAT (Bates-Jensen Wound Assessment Tool)",
  "category": "wound_assessment",
  "column": 1,
  "table": 20,
  "metadata": {
    "created": "2025-01-05",
    "updated": "2025-01-05",
    "author": "Système d'évaluation clinique",
    "language": "fr-CA"
  },
  "bwat_attribution": {
    "title": "BWAT - Bates-Jensen Wound Assessment Tool",
    "version": "Version traduite autorisée",
    "attribution": "Janvier 2019. Traduit par Valérie Chaplain et Isabelle Reeves avec permission de Barbara Bates-Jensen. Reproduction autorisée par ces trois personnes.",
    "display": true,
    "ui": {
      "component": "AttributionBadge",
      "position": "top"
    }
  },
  "elements": [
    {
      "id": "C1T20E01",
      "type": "single_choice",
      "label": "Évaluation du sous-minage",
      "description": "Sélectionnez le score qui décrit le mieux le sous-minage de la plaie",
      "required": true,
      "options": [
        {
          "id": "C1T20E01_01",
          "label": "0",
          "description": "Plaie guérie - Plaie complètement guérie",
          "score": 0
        },
        {
          "id": "C1T20E01_02",
          "label": "1",
          "description": "Aucun sous-minage - Absence de sous-minage",
          "score": 1
        },
        {
          "id": "C1T20E01_03",
          "label": "2",
          "description": "Sous-minage < 2 cm, peu importe l'orientation - Sous-minage de moins de 2 cm",
          "score": 2
        },
        {
          "id": "C1T20E01_04",
          "label": "3",
          "description": "Sous-minage 2–4 cm impliquant < 50 % des bords de la plaie - Sous-minage modéré impliquant moins de 50% des bords",
          "score": 3
        },
        {
          "id": "C1T20E01_05",
          "label": "4",
          "description": "Sous-minage 2–4 cm impliquant > 50 % des bords de la plaie - Sous-minage modéré impliquant plus de 50% des bords",
          "score": 4
        },
        {
          "id": "C1T20E01_06",
          "label": "5",
          "description": "Sous-minage > 4 cm ou sinus/tunnel, peu importe l'endroit - Sous-minage sévère ou présence de sinus/tunnel",
          "score": 5
        }
      ],
      "ui": {
        "component": "RadioGroup",
        "help": "Sélectionnez un seul score de sous-minage BWAT"
      }
    }
  ],
  "complementary_fields": {
    "clock_position": {
      "id": "C1T20E07",
      "type": "text",
      "label": "Localisation circulaire du sous-minage",
      "description": "Position du sous-minage selon la notation horloge",
      "required": false,
      "validation": {
        "pattern": "^De \\d{1,2} h à \\d{1,2} h$",
        "placeholder": "De ___ h à ___ h",
        "help": "Ex: De 2 h à 6 h, De 9 h à 12 h"
      },
      "ui": {
        "component": "TextInput",
        "placeholder": "De ___ h à ___ h",
        "help": "Indiquez la localisation circulaire du sous-minage selon la notation horloge",
        "tooltip": "Utilisez la notation horloge pour localiser le sous-minage (ex: De 2 h à 6 h)"
      },
      "conditional_display": {
        "condition": {
          "anyOf": ["C1T20E01_03", "C1T20E01_04", "C1T20E01_05", "C1T20E01_06"]
        }
      }
    },
    "depth": {
      "id": "C1T20E08",
      "type": "number",
      "label": "Profondeur",
      "description": "Profondeur du sous-minage en centimètres",
      "required": false,
      "validation": {
        "min": 0.1,
        "max": 20,
        "step": 0.1,
        "unit": "cm"
      },
      "ui": {
        "component": "NumericInput",
        "placeholder": "cm",
        "help": "Mesurez la profondeur du sous-minage en centimètres",
        "tooltip": "Profondeur du sous-minage en centimètres"
      },
      "conditional_display": {
        "condition": {
          "anyOf": ["C1T20E01_03", "C1T20E01_04", "C1T20E01_05", "C1T20E01_06"]
        }
      }
    }
  },
  "additional_tracts": {
    "sinus": {
      "id": "C1T20E09",
      "type": "number",
      "label": "Sinus",
      "description": "Trajet simple",
      "required": false,
      "validation": {
        "min": 0.1,
        "max": 20,
        "step": 0.1,
        "unit": "cm"
      },
      "ui": {
        "component": "NumericInput",
        "placeholder": "cm",
        "help": "Mesurez la profondeur du sinus en centimètres",
        "tooltip": "Trajet simple"
      },
      "detailed_definition": {
        "title": "Sinus",
        "description": "Trajet simple",
        "clinical_characteristics": [
          "Trajet simple",
          "Cavité qui s'étend dans les tissus",
          "Pas de connexion avec d'autres structures"
        ]
      },
      "conditional_display": {
        "condition": {
          "anyOf": ["C1T20E01_06"]
        }
      }
    },
    "tunnel": {
      "id": "C1T20E10",
      "type": "number",
      "label": "Tunnel",
      "description": "Trajet menant à une autre cavité ou une autre plaie",
      "required": false,
      "validation": {
        "min": 0.1,
        "max": 20,
        "step": 0.1,
        "unit": "cm"
      },
      "ui": {
        "component": "NumericInput",
        "placeholder": "cm",
        "help": "Mesurez la profondeur du tunnel en centimètres",
        "tooltip": "Trajet menant à une autre cavité ou une autre plaie"
      },
      "detailed_definition": {
        "title": "Tunnel",
        "description": "Trajet menant à une autre cavité ou une autre plaie",
        "clinical_characteristics": [
          "Trajet menant à une autre cavité",
          "Connexion avec une autre plaie",
          "Passage entre deux structures"
        ]
      },
      "conditional_display": {
        "condition": {
          "anyOf": ["C1T20E01_06"]
        }
      }
    },
    "fistula": {
      "id": "C1T20E11",
      "type": "mixed",
      "label": "Fistule",
      "description": "Trajet menant à un organe interne",
      "required": false,
      "fields": [
        {
          "id": "C1T20E11_depth",
          "type": "number",
          "label": "Profondeur de la fistule",
          "validation": {
            "min": 0.1,
            "max": 20,
            "step": 0.1,
            "unit": "cm"
          },
          "ui": {
            "component": "NumericInput",
            "placeholder": "cm",
            "help": "Mesurez la profondeur de la fistule en centimètres"
          }
        },
        {
          "id": "C1T20E11_organ",
          "type": "text",
          "label": "Organe concerné",
          "validation": {
            "max_length": 200,
            "placeholder": "Ex: intestin, vessie, utérus..."
          },
          "ui": {
            "component": "TextInput",
            "placeholder": "Ex: intestin, vessie, utérus...",
            "help": "Précisez l'organe interne concerné par la fistule"
          }
        }
      ],
      "ui": {
        "component": "MixedInput",
        "help": "Mesurez la profondeur et précisez l'organe concerné",
        "tooltip": "Trajet menant à un organe interne"
      },
      "detailed_definition": {
        "title": "Fistule",
        "description": "Trajet menant à un organe interne",
        "clinical_characteristics": [
          "Trajet menant à un organe interne",
          "Connexion anormale entre deux structures",
          "Peut impliquer des organes creux"
        ]
      },
      "conditional_display": {
        "condition": {
          "anyOf": ["C1T20E01_06"]
        }
      }
    }
  },
  "validation_rules": {
    "single_selection": {
      "min_selections": 1,
      "max_selections": 1,
      "allow_none": false,
      "required": true
    },
    "complementary_fields": {
      "conditional_required": {
        "C1T20E07": {
          "condition": {
            "anyOf": ["C1T20E01_03", "C1T20E01_04", "C1T20E01_05", "C1T20E01_06"]
          },
          "required": false
        },
        "C1T20E08": {
          "condition": {
            "anyOf": ["C1T20E01_03", "C1T20E01_04", "C1T20E01_05", "C1T20E01_06"]
          },
          "required": false
        }
      }
    },
    "error_messages": {
      "no_selection": "Veuillez sélectionner un score de sous-minage BWAT",
      "multiple_selections": "Un seul score de sous-minage peut être sélectionné"
    }
  },
