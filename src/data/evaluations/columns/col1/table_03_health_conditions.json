        {
          "id": "C1T03_DIAB_HBA1C_VALUE",
          "type": "number",
          "label": "HbA1C*",
          "description": "Hémoglobine glyquée",
          "validation": {
            "min": 0,
            "max": 20,
            "step": 0.1
          },
          "unit": "%",
          "help_popup": "Si >7%"
        },
        {
          "id": "C1T03_DIAB_HBA1C_UNKNOWN",
          "type": "boolean",
          "label": "HbA1C Inconnue"
        },
        {
          "id": "C1T03_DIAB_FASTING_VALUE",
          "type": "number",
          "label": "Glycémie à jeun",
          "description": "Au lever ou 4h postrepas",
          "validation": {
            "min": 0,
            "max": 30,
            "step": 0.1
          },
          "unit": "mmol/L",
          "help_popup": "Si >7"
        },
        {
          "id": "C1T03_DIAB_FASTING_UNKNOWN",
          "type": "boolean",
          "label": "Glycémie à jeun Inconnue"
        },
        {
          "id": "C1T03_DIAB_POSTPRANDIAL_VALUE",
          "type": "number",
          "label": "Glycémie 2h postprandiale",
          "description": "Entrez un chiffre",
          "validation": {
            "min": 0,
            "max": 30,
            "step": 0.1
          },
          "unit": "mmol/L",
          "help_popup": "Si >10"
        },
        {
          "id": "C1T03_DIAB_POSTPRANDIAL_UNKNOWN",
          "type": "boolean",
          "label": "Glycémie 2h postprandiale Inconnue"
        }
