    "edinburgh_questionnaire": {
      "id": "C1T15E",
      "title": "Bloc C — Questionnaire d'Édimbourg",
      "description": "Questionnaire de claudication intermittente",
      "type": "questionnaire",
      "required": false,
      "condition": {
        "anyOf": ["C1T14E05", "C1T14E06"]
      },
      "questions": [
        {
          "id": "C1T15E01",
          "label": "Ressentez-vous une douleur/gêne dans une jambe quand vous marchez ?",
          "type": "single_choice",
          "required": true,
          "options": [
            {
              "id": "C1T15E01_yes",
              "label": "Oui"
            },
            {
              "id": "C1T15E01_no",
              "label": "Non"
            },
            {
              "id": "C1T15E01_cant_walk",
              "label": "Ne marche pas"
            }
          ],
          "conditional_questions": {
            "condition": "C1T15E01_yes",
            "questions": [
              {
                "id": "C1T15E02",
                "label": "Douleur parfois au repos (assis ou immobile) ?",
                "type": "single_choice",
                "required": true,
                "options": [
                  {
                    "id": "C1T15E02_yes",
                    "label": "Oui"
                  },
                  {
                    "id": "C1T15E02_no",
                    "label": "Non"
                  }
                ]
              },
              {
                "id": "C1T15E03",
                "label": "Douleur lors de montée d'escalier ou marche rapide ?",
                "type": "single_choice",
                "required": true,
                "options": [
                  {
                    "id": "C1T15E03_yes",
                    "label": "Oui"
                  },
                  {
                    "id": "C1T15E03_no",
                    "label": "Non"
                  }
                ]
              },
              {
                "id": "C1T15E04",
                "label": "Douleur lors de marche normale sur terrain plat ?",
                "type": "single_choice",
                "required": true,
                "options": [
                  {
                    "id": "C1T15E04_yes",
                    "label": "Oui"
                  },
                  {
                    "id": "C1T15E04_no",
                    "label": "Non"
                  }
                ]
              },
              {
                "id": "C1T15E05",
                "label": "Que devient la douleur si vous vous arrêtez ?",
                "type": "single_choice",
                "required": true,
                "options": [
                  {
                    "id": "C1T15E05_persists",
                    "label": "Persiste >10 min"
                  },
                  {
                    "id": "C1T15E05_disappears",
                    "label": "Disparaît ≤10 min"
                  }
                ]
              },
              {
                "id": "C1T15E06",
                "label": "Localisation de la douleur",
                "type": "multiple_choice",
                "required": false,
                "options": [
                  {
                    "id": "C1T15E06_buttocks",
                    "label": "Fesses"
                  },
                  {
                    "id": "C1T15E06_thighs",
                    "label": "Cuisses"
                  },
                  {
                    "id": "C1T15E06_calves",
                    "label": "Mollets"
                  },
                  {
                    "id": "C1T15E06_joints",
                    "label": "Articulations"
                  }
                ]
              }
            ]
          }
        }
      ],
      "interpretation": {
        "claudication_intermittent": {
          "condition": "Q1=oui, Q2=non, Q3=oui, Q4=oui, Q5=≤10min, Q6=jambes",
          "result": "Claudication intermittente"
        }
      }
    },
    "ipscb": {
      "id": "C1T15D",
      "title": "Bloc D — IPSCB (Indice Pression Systolique Cheville Bras)",
      "description": "Mesure de l'index de pression systolique cheville-bras",
      "type": "calculation",
      "required": false,
      "condition": {
        "anyOf": ["C1T14E05", "C1T14E06"]
      },
      "measurements": [
        {
          "id": "C1T15D01",
          "label": "PAS bras (plus élevé des 2)",
          "type": "number",
          "unit": "mmHg",
          "validation": {
            "min": 50,
            "max": 300,
            "step": 1
          },
          "required": true,
          "ui": {
            "component": "NumericInput",
            "placeholder": "mmHg",
            "help": "Entrez la pression artérielle systolique du bras (la plus élevée)"
          }
        },
        {
          "id": "C1T15D02",
          "label": "PAS artère tibiale postérieure droite",
          "type": "number",
          "unit": "mmHg",
          "validation": {
            "min": 50,
            "max": 300,
            "step": 1
          },
          "required": false,
          "ui": {
            "component": "NumericInput",
            "placeholder": "mmHg",
            "help": "Entrez la pression de l'artère tibiale postérieure droite"
          }
        },
        {
          "id": "C1T15D03",
          "label": "PAS artère pédieuse droite",
          "type": "number",
          "unit": "mmHg",
          "validation": {
            "min": 50,
            "max": 300,
            "step": 1
          },
          "required": false,
          "ui": {
            "component": "NumericInput",
            "placeholder": "mmHg",
            "help": "Entrez la pression de l'artère pédieuse droite"
          }
        },
        {
          "id": "C1T15D04",
          "label": "PAS artère tibiale postérieure gauche",
          "type": "number",
          "unit": "mmHg",
          "validation": {
            "min": 50,
            "max": 300,
            "step": 1
          },
          "required": false,
          "ui": {
            "component": "NumericInput",
            "placeholder": "mmHg",
            "help": "Entrez la pression de l'artère tibiale postérieure gauche"
          }
        },
        {
          "id": "C1T15D05",
          "label": "PAS artère pédieuse gauche",
          "type": "number",
          "unit": "mmHg",
          "validation": {
            "min": 50,
            "max": 300,
            "step": 1
          },
          "required": false,
          "ui": {
            "component": "NumericInput",
            "placeholder": "mmHg",
            "help": "Entrez la pression de l'artère pédieuse gauche"
          }
        }
      ],
      "calculation": {
        "formula": "max(PAS_membre_inférieur) / PAS_bras",
        "output_field": "C1T15D06",
        "label": "IPSCB calculé",
        "rounding": 2
      },
      "interpretation": {
        "indeterminate": {
          "condition": "≥ 1.40",
          "label": "Indéterminé",
          "description": "Artères non compressibles",
          "color": "#FF9800"
        },
        "normal": {
          "condition": "1.0 - 1.4",
          "label": "Normal",
          "description": "Valeurs normales",
          "color": "#4CAF50"
        },
        "borderline": {
          "condition": "0.9 - 0.99",
          "label": "Limite",
          "description": "Valeurs limites",
          "color": "#FF9800"
        },
        "mild": {
          "condition": "0.7 - 0.89",
          "label": "Anormal, atteinte légère",
          "description": "Atteinte vasculaire légère",
          "color": "#F44336"
        },
        "moderate": {
          "condition": "0.4 - 0.69",
          "label": "Anormal, atteinte modérée",
          "description": "Atteinte vasculaire modérée",
          "color": "#F44336"
        },
        "severe": {
          "condition": "< 0.4",
          "label": "Anormal, atteinte sévère",
          "description": "Atteinte vasculaire sévère",
          "color": "#9C27B0",
          "legend": "alert"
        }
      }
    }
