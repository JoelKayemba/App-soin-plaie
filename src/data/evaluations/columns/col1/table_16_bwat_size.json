{
  "id": "C1T16",
  "title": "BWAT – Taille",
  "description": "Évaluation de la taille de la plaie selon l'échelle BWAT (Bates-Jensen Wound Assessment Tool)",
  "category": "wound_assessment",
  "column": 1,
  "table": 16,
  "bwat_attribution": {
    "title": "BWAT - Bates-Jensen Wound Assessment Tool",
    "version": "Version traduite autorisée",
    "attribution": "Janvier 2019. Traduit par Valérie Chaplain et Isabelle Reeves avec permission de Barbara Bates-Jensen. Reproduction autorisée par ces trois personnes.",
    "display": true,
    "ui": {
      "component": "AttributionBadge",
      "position": "top"
    }
  },
  "elements": [
    {
      "id": "C1T16E01",
      "type": "number",
      "label": "Longueur",
      "required": true,
      "validation": {
        "min": 0.1,
        "max": 100,
        "step": 0.1,
        "unit": "cm"
      },
      "ui": {
        "component": "NumericInput",
        "placeholder": "cm",
        "help": "Mesurez la longueur de la plaie à angle droit (en cm)"
      },
      "measurement_notes": {
        "technique": "Mesure à angle droit",
        "position": "Position perpendiculaire à la largeur"
      }
    },
    {
      "id": "C1T16E02",
      "type": "number",
      "label": "Largeur",
      "required": true,
      "validation": {
        "min": 0.1,
        "max": 100,
        "step": 0.1,
        "unit": "cm"
      },
      "ui": {
        "component": "NumericInput",
        "placeholder": "cm",
        "help": "Mesurez la largeur de la plaie à angle droit (en cm)"
      },
      "measurement_notes": {
        "technique": "Mesure à angle droit",
        "position": "Position perpendiculaire à la longueur"
      }
    },
    {
      "id": "C1T16E03",
      "type": "calculated",
      "label": "Surface calculée",
      "description": "Surface de la plaie calculée automatiquement",
      "formula": "C1T16E01 * C1T16E02",
      "unit": "cm²",
      "rounding": 1,
      "ui": {
        "component": "ResultBadge",
        "color": "blue",
        "help": "Surface calculée automatiquement (longueur × largeur)"
      },
      "derived_from": [
        "C1T16E01",
        "C1T16E02"
      ]
    }
  ],
  "classification": {
    "id": "C1T16E04",
    "type": "calculated",
    "label": "Classification BWAT",
    "description": "Score BWAT basé sur la surface calculée",
    "formula": "bwat_size_classification",
    "derived_from": "C1T16E03",
    "ui": {
      "component": "ResultBadge",
      "color": "dynamic",
      "help": "Classification automatique selon l'échelle BWAT"
    },
    "scores": [
      {
        "id": "C1T16E04_0",
        "score": 0,
        "label": "Plaie guérie",
        "description": "Plaie complètement guérie",
        "condition": "surface = 0",
        "color": "#4CAF50",
        "icon": "check_circle"
      },
      {
        "id": "C1T16E04_1",
        "score": 1,
        "label": "< 4 cm²",
        "description": "Surface inférieure à 4 cm²",
        "condition": "surface < 4",
        "color": "#8BC34A",
        "icon": "circle"
      },
      {
        "id": "C1T16E04_2",
        "score": 2,
        "label": "4 à 16 cm²",
        "description": "Surface entre 4 et 16 cm²",
        "condition": "surface >= 4 && surface <= 16",
        "color": "#FFC107",
        "icon": "circle"
      },
      {
        "id": "C1T16E04_3",
        "score": 3,
        "label": "16,1 à 36 cm²",
        "description": "Surface entre 16,1 et 36 cm²",
        "condition": "surface > 16 && surface <= 36",
        "color": "#FF9800",
        "icon": "circle"
      },
      {
        "id": "C1T16E04_4",
        "score": 4,
        "label": "36,1 à 80 cm²",
        "description": "Surface entre 36,1 et 80 cm²",
        "condition": "surface > 36 && surface <= 80",
        "color": "#F44336",
        "icon": "circle"
      },
      {
        "id": "C1T16E04_5",
        "score": 5,
        "label": "> 80 cm²",
        "description": "Surface supérieure à 80 cm²",
        "condition": "surface > 80",
        "color": "#9C27B0",
        "icon": "circle"
      }
    ]
  },
  "photo_requirement": {
    "required": true,
    "id": "C1T16E05",
    "label": "Photo de la plaie",
    "type": "photo",
    "validation": {
      "required": true,
      "max_size": "10MB",
      "formats": [
        "jpg",
        "jpeg",
        "png"
      ]
    },
    "ui": {
      "component": "PhotoCapture",
      "help": "Prenez une photo de la plaie avec les mesures visibles"
    },
    "measurement_overlay": {
      "enabled": true,
      "show_ruler": true,
      "show_dimensions": true
    }
  },
  "validation_rules": {
    "measurements": {
      "both_required": true,
      "min_values": {
        "length": 0.1,
        "width": 0.1
      },
      "max_values": {
        "length": 100,
        "width": 100
      }
    },
    "photo": {
      "required": true,
      "validation_message": "Photo de la plaie obligatoire pour l'évaluation BWAT"
    }
  },
  "ui_configuration": {
    "layout": "vertical",
    "spacing": "medium",
    "group_label": "BWAT – Taille",
    "instructions": "Mesurez la plaie à angle droit et prenez une photo",
    "sections": [
      {
        "title": "Mesures",
        "elements": [
          "C1T16E01",
          "C1T16E02",
          "C1T16E03"
        ],
        "type": "measurement_group"
      },
      {
        "title": "Classification BWAT",
        "elements": [
          "C1T16E04"
        ],
        "type": "classification_display"
      },
      {
        "title": "Documentation",
        "elements": [
          "C1T16E05"
        ],
        "type": "photo_section"
      }
    ]
  }
}