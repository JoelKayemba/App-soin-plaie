{
  "id": "C1T4",
  "title": "Poids & IMC",
  "type": "calculation_group",
  "description": "Champs numériques avec calcul automatique de l'IMC et sélection conditionnelle",
  "required": true,
  "elements": [
    {
      "id": "C1T4E01",
      "type": "number",
      "label": "Taille",
      "description": "Unité : mètre ou pieds/pouces",
      "required": true,
      "unit_options": [
        {"value": "meters", "label": "mètres"},
        {"value": "feet_inches", "label": "pieds/pouces"}
      ],
      "validation": {
        "min": 0.5,
        "max": 2.5,
        "decimals": 2
      }
    },
    {
      "id": "C1T4E02",
      "type": "number",
      "label": "Poids",
      "description": "Unité : kg ou livres",
      "required": true,
      "unit_options": [
        {"value": "kg", "label": "kilogrammes"},
        {"value": "lbs", "label": "livres"}
      ],
      "validation": {
        "min": 1,
        "max": 300,
        "decimals": 1
      }
    },
    {
      "id": "C1T4E03",
      "type": "calculated",
      "label": "IMC",
      "description": "Calcul automatique : poids / (taille²)",
      "formula": "weight / (height * height)",
      "depends_on": ["C1T4E01", "C1T4E02"]
    }
  ],
  "bmi_classifications": [
    {
      "id": "C1T4E04",
      "range": "< 18.5",
      "label": "Poids insuffisant",
      "color": "#FF9800"
    },
    {
      "id": "C1T4E05",
      "range": "18.5 – 24.9",
      "label": "Poids normal",
      "color": "#4CAF50"
    },
    {
      "id": "C1T4E06",
      "range": "25.0 – 29.9",
      "label": "Excès de poids",
      "color": "#FF9800"
    },
    {
      "id": "C1T4E07",
      "range": "30.0 – 34.9",
      "label": "Obésité, classe I",
      "color": "#F44336"
    },
    {
      "id": "C1T4E08",
      "range": "35.0 – 39.9",
      "label": "Obésité, classe II",
      "color": "#D32F2F"
    },
    {
      "id": "C1T4E09",
      "range": "≥ 40.0",
      "label": "Obésité, classe III",
      "color": "#B71C1C"
    }
  ],
  "conditional_selection": {
    "id": "C1T4E10-E11",
    "type": "single_choice",
    "label": "Sélection conditionnelle",
    "description": "Choisir entre Obésité ou Cachexie",
    "required": true,
    "options": [
      {
        "id": "C1T4E10",
        "label": "Obésité",
        "value": "obesite"
      },
      {
        "id": "C1T4E11",
        "label": "Cachexie",
        "value": "cachexie"
      }
    ]
  }
}
